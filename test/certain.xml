<cvImagePipeline name="testProcessor">
  
	<Processor class="VideoCapture" name="cap">
		<Property name="deviceIndex" value="0"/>
	</Processor>
  <Processor class="Flipper" name="fripHoriz">
    <Property name="flipDir" value="1"/>
  </Processor>
  <!--
  <Processor class="Resizer" name="resizer">
		<Property name="width" value="320"/>
		<Property name="height" value="240"/>
	</Processor>
  -->
  <Processor class="ColorConverter" name="grayscale"/>
  <Processor class="EqualizeHist" name="equalizeHist"/>
  <Processor class="GaussianBlur" name="blur"/>
  <Processor class="DepthTo32F" name="depthTo32F"/>
  <Processor class="ImagePoint" name="preprocessed"/>
  <Processor class="ImageWindow" name="window">
    <Property name="windowName" value="Camera"/>
  </Processor>

  <Processor class="RunningAvg" name="runavg10m" autoBind="false">
    <Property name="averageCount" value="18000"/>
    <Input from="preprocessed"/>
  </Processor>
  <Processor class="ImageWindow" name="runavg10mWindow">
    <Property name="windowName" value="runningAverage180000frames"/>
    <Property name="showFPS" value="true"/>
  </Processor>

</cvImagePipeline>
